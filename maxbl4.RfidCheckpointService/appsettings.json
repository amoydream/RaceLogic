{
  "Serilog": {
    "Using":  ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "maxbl4.RfidDotNet": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console", "Args": {
        "outputTemplate": "{Timestamp:u} [{Level:u3}] [{ThreadId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
      } },
      { "Name": "File", "Args": { "path": "RfidCheckpointServiceRunner.log", "shared": true, "fileSizeLimitBytes": 20971520, "rollOnFileSizeLimit": true,
        "outputTemplate": "{Timestamp:u} [{Level:u3}] [{ThreadId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"} }
    ],
    "Enrich": ["FromLogContext", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "ServiceOptions": {
    "StorageConnectionString": "Filename=storage.litedb;InitialSize=10485760;UtcDate=true"    
  }
}
